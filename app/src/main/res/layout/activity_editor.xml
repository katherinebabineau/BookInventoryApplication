<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/headerTextViewDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:scaleType="fitCenter"
        android:src="@drawable/open_book_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Information"
        android:id="@+id/headerTextViewDetails"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_below="@+id/headerTextViewDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/quantityHeaderEditor">
 <LinearLayout
     android:layout_width="225dp"
     android:layout_height="98dp"
     android:orientation="vertical"
     android:weightSum="1">

     <EditText
         android:id="@+id/bookTitleEditTextEditor"
         android:layout_width="207dp"
         android:layout_height="80dp"
         android:hint="Book Title"/>

 </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/bookPriceEditTextEditor"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.08"
                android:hint="Price in USD"/>

            <EditText
                android:id="@+id/bookPagesEditTextEditor"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Pages"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/quantityHeaderEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_above="@+id/plusButtonEditor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

    </LinearLayout>

    <Button
        android:id="@+id/plusButtonEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/quantitySummaryEditor"
        android:layout_toEndOf="@+id/quantitySummaryEditor"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/minusButtonEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/quantitySummaryEditor"
        android:layout_alignBottom="@+id/quantitySummaryEditor"
        android:layout_toLeftOf="@+id/quantitySummaryEditor"
        android:layout_toStartOf="@+id/quantitySummaryEditor"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/quantitySummaryEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="#"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/plusButtonEditor"
        android:layout_alignBottom="@+id/plusButtonEditor"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/bookAuthorEditTextEditor"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:hint="Author"
        android:layout_above="@+id/quantityHeaderEditor"
        android:layout_toStartOf="@+id/quantitySummaryEditor"
        android:layout_toLeftOf="@+id/quantitySummaryEditor" />

</RelativeLayout>